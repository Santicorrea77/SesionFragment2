<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:id="@+id/fragmenet_sup"
              android:name="com.example.sesionfragment.SupermanFragment"
    />

    <fragment android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:id="@+id/fragmenet_bat"
              android:name="com.example.sesionfragment.BatmanFragment"
    />

    <fragment android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:id="@+id/fragmenet_fla"
              android:name="com.example.sesionfragment.FlashFragment"
    />


</LinearLayout>